FROM postgres:15.5-bookworm

# Set the pgvector version
ARG PGVECTOR_VERSION=0.5.1

# Install build dependencies and Webmin
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
        ca-certificates \
        build-essential \
        curl \
        postgresql-server-dev-15 \
        wget \
        net-tools \
        nano \
        perl libsocket6-perl \
        procps \
        curl \
        iputils-ping \
        iproute2 \
        perl \
        libdbi-perl \
        sudo \
        libdbd-pg-perl && \
    # Install Perl modules
    yes | cpan DBI DBD::Pg && \
    # Download and install pgvector
    curl -f -L -o pgvector.tar.gz "https://github.com/pgvector/pgvector/archive/refs/tags/v${PGVECTOR_VERSION}.tar.gz" && \
    tar -xzf pgvector.tar.gz && \
    cd "pgvector-${PGVECTOR_VERSION}" && \
    make OPTFLAGS="" && \
    make install && \
    mkdir /usr/share/doc/pgvector && \
    cp LICENSE README.md /usr/share/doc/pgvector && \
    # Install Webmin
    wget -qO - http://www.webmin.com/jcameron-key.asc | apt-key add - && \
    echo "deb http://download.webmin.com/download/repository sarge contrib" > /etc/apt/sources.list.d/webmin.list && \
    apt-get update && \
    apt-get install -y webmin && \
    # Configure Webmin
    sed -i 's/ssl=1/ssl=0/' /etc/webmin/miniserv.conf && \
    echo "webmin: ALL" >> /etc/hosts.allow && \
    sed -i 's#hba_conf=.*#hba_conf=/var/lib/postgresql/data/pg_hba.conf#' /etc/webmin/postgresql/config && \
    sed -i 's/ipv6=1/ipv6=0/' /etc/webmin/miniserv.conf && \
    echo "referers=hoodzepdb.cybroxnest.com" >> /etc/webmin/config && \
    # Clean up
    apt-get remove -y build-essential curl postgresql-server-dev-15 && \
    apt-get autoremove -y && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* && \
    rm -rf /pgvector.tar.gz /pgvector-${PGVECTOR_VERSION}

# Create necessary directories and set permissions
RUN mkdir -p /var/webmin && \
    chown -R root:root /var/webmin && \
    chmod 755 /var/webmin

# Create a startup script
RUN echo '#!/bin/bash\n\
/usr/share/webmin/miniserv.pl /etc/webmin/miniserv.conf &\n\
exec "$@"' > /start-webmin.sh && \
    chmod +x /start-webmin.sh

# Set the startup script as the entrypoint
ENTRYPOINT ["/start-webmin.sh"]

# Default command (can be overridden)
CMD ["postgres"]
